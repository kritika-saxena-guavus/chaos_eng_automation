{
	"version": "1.0.0",
	"title": "Experiment will killing a process running on shell",
	"description": "The shell process should get auto-relaunched upon ungraceful killing",
	"tags": ["kubernetes"],
  	"controls": [{
        "name": "shell-app-controls",
        "provider": {
            "type": "python",
            "module": "chaostoolkit_nimble.controllers.application.shell_app.control"
        }
  }],
	"steady-state-hypothesis": {
		"title": "Shell application is up and running",
		"probes": [{
      "type": "probe",
      "name": "Fetch-application-process-id",
      "tolerance": true,
          "provider": {
            "module": "chaostoolkit_nimble.core.utils.ha_utils",
        "type": "python",
        "func": "check_process_running",
        "arguments": {
          "component": "{{component}}",
          "process_name": "{{process_name}}"
        }
      }
		}]
	},
  "method": [{
    "type": "action",
    "name": "Kill-application-process",
    "provider": {
      "module": "chaostoolkit_nimble.core.utils.ha_utils",
      "type": "python",
      "func": "kill_process",
      "arguments": {
        "component": "{{component}}",
        "process_name": "{{process_name}}"
        }
      }
  }],
   "rollbacks": [
    ]
}
